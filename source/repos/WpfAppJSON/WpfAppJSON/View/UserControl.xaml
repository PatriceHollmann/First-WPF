<UserControl x:Class="WpfAppJSON.View.UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppJSON.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContentControl.Template>
        <ControlTemplate TargetType="ContentControl">

            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" >
                    <TextBlock Text="Имя"/>
                <TextBlock Text="Логин"/>
                    <TextBlock Text="Группа"/>
                    <TextBlock Text="Телефон"/>
                    <TextBlock />
                    <TextBlock />


                </StackPanel>
                <StackPanel Grid.Column="1"  DataContext="{Binding SelectedPerson}" HorizontalAlignment="Left" Width="600">
                    <TextBox Text="{Binding Name}" Height="Auto"/>
                </StackPanel>

            </Grid>
        </ControlTemplate>
    </ContentControl.Template>
</UserControl>
